{
    "name": "spatie/simple-tcp-client",
    "description": "Connect and send data through a TCP connection",
    "keywords": [
        "spatie",
        "simple-tcp-client"
    ],
    "homepage": "https://github.com/spatie/simple-tcp-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-sockets": "*",
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "spatie/pest-expectations": "^1.13.2",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\SimpleTcpClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\SimpleTcpClient\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
